#!/usr/bin/env ruby
# frozen_string_literal: true

puts '== Running gem specs =='
puts <<~MSG
  You can also run individual specs like so:

    # Using `m`
    bundle exec m spec/example_spec.rb:42

    # Using plain minitest
    ruby -I lib:spec spec/example_spec.rb
    ruby -I lib:spec spec/example_spec.rb --name 'test_name_here'

MSG

env = {'RAILS_ENV' => 'test', 'BACKTRACE' => 'true'}

system env, *%w[bundle exec rake spec], *ARGV
